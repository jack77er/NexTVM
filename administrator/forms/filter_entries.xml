<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			inputmode="search"
			label="COM_TVM_FILTER_SEARCH_LABEL"
			description="COM_TVM_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
			onchange="this.form.submit();"
		/>
		<field
			name="event"
			type="sql"
			default="1"			
			label="COM_TVM_FILTER_EVENT"
			query="SELECT id, title FROM #__tvm_events"
			key_field="id"
			value_field="title"
			onchange="this.form.submit();"
		>
		<option value="">COM_TVM_ENTRIES_SELECT_TEXT</option>
		</field>
	</fields>
	
</form>