			name="tvm_message_user_refusal"
			type="textarea"
			translate_default="true"
			default="COM_TVM_USER_REFUSAL_DEFAULT_MESSAGE"
			label="COM_TVM_USER_REFUSAL_LABEL"
			rows="10" 
			cols="30"
			description="COM_TVM_USER_REFUSAL_DESC" />
	</fieldset>

    <fieldset name="permissions" description="JCONFIG_PERMISSIONS_DESC" label="JCONFIG_PERMISSIONS_LABEL">
        <field name="rules" type="rules" component="com_tvm" class="inputbox" filter="rules" validate="rules" label="JCONFIG_PERMISSIONS_LABEL" section="component" />
	</fieldset>

</config>
