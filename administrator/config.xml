<config>
	<fieldset name="TVM_PARAMS">

		<field name="tvm_trainer_group"  type="usergroup" default="" label="COM_TVM_GROUP_TRAINER" description="COM_TVM_GROUP_TRAINER_DESC" />
		<field name="tvm_frontpage_color_state_1" type="color" default="#99FF99" label="COM_TVM_FP_COLOR_STATE_1" description="COM_TVM_FP_COLOR_STATE_1_DESC" />
