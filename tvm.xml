<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="4.0" method="upgrade">
    <name>com_tvm</name>
    <creationDate>2022-10-05</creationDate>
    <copyright>Jacob Maxa</copyright>
    <license>GNU General Public License Version 2 oder sp√§ter; siehe LICENSE.txt</license>
    <author>Jacob Maxa</author>
    <authorEmail>jacob.maxa@gmail.com</authorEmail>
    <authorUrl>http://rostockerseebaeren.de</authorUrl>
    <version>4.0.0</version>
    <description>COM_TVM_XML_DESCRIPTION</description>
    <namespace path="src">Seebaren\Component\Tvm</namespace>
    
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <update> <!-- Runs on update -->
        <schemas>
            <schemapath type="mysql">sql/updates</schemapath>
        </schemas>
    </update>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    

    <files folder="site">
        <folder>src</folder>
        <folder>forms</folder>
        <folder>tmpl</folder>
    </files>
    <media destination="com_tvm" folder="media">
        <folder>css</folder>
        <folder>js</folder>
        <filename>joomla.asset.json</filename>
    </media>
    <languages folder="site/languages">
        
			<language tag="de-DE">de-DE/com_tvm.ini</language>
    </languages>
    <administration>
        <menu>COM_TVM</menu>
        <submenu>
			<menu link="option=com_tvm&amp;view=tvms" view="tvms" alt="Tvm/Tvms">COM_TVM_TITLE_TVMS</menu>
			<menu link="option=com_tvm&amp;view=entries" view="entries" alt="Tvm/Entries">COM_TVM_TITLE_ENTRIES</menu>
			<menu link="option=com_tvm&amp;view=categories" view="categories" alt="Tvm/Templates">COM_TVM_TITLE_CATEGORIES</menu>
			<menu link="option=com_tvm&amp;view=templates" view="templates" alt="Tvm/Templates">COM_TVM_TITLE_TEMPLATES</menu>
        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <folder>forms</folder>
            <folder>src</folder>
            <folder>tmpl</folder>
            <folder>services</folder>
            <folder>presets</folder>
            <folder>sql</folder>
        </files>
        <languages folder="administrator/languages">
            
			<language tag="de-DE">de-DE/com_tvm.ini</language>
			<language tag="de-DE">de-DE/com_tvm.sys.ini</language>
        </languages>
    </administration>
    <config>
        <fields name="params">
            <fieldset name="component">
                <field name="save_history" default="0" />
            </fieldset>
        </fields>
    </config>
    <plugins>
    </plugins>
    

    <updateservers>
        <server type="extension" priority="1" name="com_tvm">https://nocdn.component-creator.com/index.php?task=builder.preupdatecheckhook&amp;option=com_combuilder&amp;component=NDg3NDgtMjA0NTQ3</server>
    </updateservers>
</extension>
